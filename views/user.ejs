<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles/styles.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <ul>
      <% users.forEach(user => { %>
      <li>
        <a href="/users/<%= user.id %>"><%= user.name %></a>
      </li>
      <% }) %>
    </ul>
    <h2>Add New User</h2>
    <form action="/users" method="POST">
      <input type="text" name="name" placeholder="Name" required />
      <button type="submit">Add User</button>
    </form>
  </body>
</html>

